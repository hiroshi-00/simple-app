<%= form_with(model: post, local: true) do |f| %>

  <div class="field form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: "5", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
